<script>

$("#add-to-club").click(function(){
  var obj = {
    "name"  : $("#add-to-club-text").val(),
    "token" : ""
  };

  $.post("add-to-club", obj, function(data){
    // alert(data);
  });
});

$("#remove-from-club").click(function(){
  var obj = {
    "name"  : $("#remove-from-club-text").val(),
    "token" : ""
  };

  $.post("remove-from-club", obj, function(data){
    // alert(data);
  });
});

$("#create-club").click(function(){
  var obj = {
    "region": $("#create-club-region").val(),
    "tag"   : $("#create-club-tag").val()
  };

  $.post("create-club", obj, function(data){
    if(data["reload"] == "true")
      location.reload();
    if(data["result"] == "failed")
      alert("Invalid region/tag");
  });
});

$("#delete-club").click(function(){
  var temp   = $("#delete-club-choice").val().replace(/[()]/g, "").toLowerCase().split(" ");
  var tag    = temp[0];
  var region = temp[1];

  var obj = {
    "choice": `club_${region}_${tag}`
  };

  $.post("delete-club", obj, function(data){
    if(data["reload"] == "true")
      location.reload();
    if(data["result"] == "failed")
      alert("Invalid region/tag");
  });
});

$("#nav-register").click(function(){
  var statusL  = $("#dropdown-login").attr("status");
  var statusCA = $("#dropdown-create-account").attr("status");

  if(statusL == "closed" && statusCA == "closed"){
    $("#dropdown-create-account").attr("status", "opening");

    $("#dropdown-create-account").animate({
      "top": "+=159"
    }, 350, function(){
      $("#dropdown-create-account").attr("status", "open");
    });
  }

  else if(statusL == "closed" && statusCA == "open"){
    $("#dropdown-create-account").attr("status", "closing");

    $("#dropdown-create-account").animate({
      "top": "-=159"
    }, 350, function(){
      $("#dropdown-create-account").attr("status", "closed");
    });
  }

  else if(statusL == "open" && statusCA == "closed"){
    $("#dropdown-login").attr("status", "closing");

    $("#dropdown-login").animate({
      "top": "-=159"
    }, 350, function(){
      $("#dropdown-login").attr("status", "closed");
      $("#dropdown-create-account").attr("status", "opening");

      $("#dropdown-create-account").animate({
        "top": "+=159"
      }, 350, function(){
        $("#dropdown-create-account").attr("status", "open");
      });
    });
  }
});

$("#nav-login").click(function(){
  var statusL  = $("#dropdown-login").attr("status");
  var statusCA = $("#dropdown-create-account").attr("status");

  if(statusL == "closed" && statusCA == "closed"){
    $("#dropdown-login").attr("status", "opening");

    $("#dropdown-login").animate({
      "top": "+=159"
    }, 350, function(){
      $("#dropdown-login").attr("status", "open");
    });
  }

  else if(statusL == "open" && statusCA == "closed"){
    $("#dropdown-login").attr("status", "closing");

    $("#dropdown-login").animate({
      "top": "-=159"
    }, 350, function(){
      $("#dropdown-login").attr("status", "closed");
    });
  }

  else if(statusL == "closed" && statusCA == "open"){
    $("#dropdown-create-account").attr("status", "closing");

    $("#dropdown-create-account").animate({
      "top": "-=159"
    }, 350, function(){
      $("#dropdown-create-account").attr("status", "closed");
      $("#dropdown-login").attr("status", "opening");

      $("#dropdown-login").animate({
        "top": "+=159"
      }, 350, function(){
        $("#dropdown-login").attr("status", "open");
      });
    });
  }
});

$("#nav-logout").click(function(){
  $.post("logout", function(data){
    if(data["reload"] == "true")
      location.reload();
  });
});

$("#create-account-submit").click(function(){
  var obj = {
    "username": $("#create-account-username").val(),
    "password": $("#create-account-password").val()
  };

  if($("#create-account-password").val() != $("#create-account-password-2").val()){
    alert("passwords don't match");
    return;
  }else{
    $.post("create-account", obj, function(data){
      alert(data["msg"]);
      if(data["r"])
        $("#nav-login").trigger("click");
    });
  }
});

$("#login-submit").click(function(){
  var obj = {
    "username": $("#login-username").val(),
    "password": $("#login-password").val()
  };

  $.post("login", obj, function(data){
    if(data["reload"] == "true")
      location.reload();
    if(data["err"])
      alert(data["err"]);
  });
});

$("#cal input").keypress(function(e){
  if(e.which == 13){
    $("#cal-submit").trigger("click");
  }
});

$("#change-background").click(function(){
  var status = $("#change-bg-popup").attr("status");

  if(status == "closed"){
    $("#change-bg-popup").attr("status", "opening");

    $("#change-bg-popup").animate({
      "top": "-=150"
    }, 350, function(){
      $("#change-bg-popup").attr("status", "open");
    });
  }else if(status == "open"){
    $("#change-bg-popup").attr("status", "closing");

    $("#change-bg-popup").animate({
      "top": "+=150"
    }, 350, function(){
      $("#change-bg-popup").attr("status", "closed");
    });
  }
});

$(".bg-option").click(function(){
  var choice = $(this).attr("choice");
  $(`#change-bg-popup tr                      > td:first-child`).css("visibility", "");
  $(`#change-bg-popup tr:nth-child(${choice}) > td:first-child`).css("visibility", "visible");

  if(choice >= 1 && choice <= 4){
    $.cookie("bg", choice);
    $($("#background")[0]).attr("choice", choice);
  }else{
    $.removeCookie("bg");
    // Random background
    var result = Math.floor(Math.random() * 4) + 1;
    var currentBG = $($("#background")[0]).attr("choice");

    // If the result is the same as the background we already have,
    // change it to the next one. If it goes out of bounds, set
    // the background to the first one in the list
    if(result == currentBG)
      result++;
    if(result == 5)
      result = 1;

    $($("#background")[0]).attr("choice", result);
  }
});

$(".filter").click(function(){
  var region = $(this).attr("region");

  if(region == "ALL"){
    $("#results > table").css("display", "table");
  }else{
    $("#results > table").css("display", "none");
    $(`#results > table[region="${region}"]`).each(function(){
      $(this).css("display", "table");
    });
  }
});

$(function(){
  var bg = $.cookie("bg");

  if(typeof bg == "undefined"){
    var choice = 5;
    $(`#change-bg-popup tr:nth-child(${choice}) > td:first-child`).css("visibility", "visible");
  }else{
    var choice = $($("#background")[0]).attr("choice");
    $(`#change-bg-popup tr:nth-child(${choice}) > td:first-child`).css("visibility", "visible");
  }

  var myTextExtraction = function(node){
    if($(node).hasClass("icon-cell")){
      var cell  = $("td:nth-child(2)", $(node).parent());
      return $(cell).text();
    }else{
      return $(node).text();
    }
  }

  // Tablesorter
  $("#results > table").tablesorter({
    "sortList":       [[2,1]],
    "textExtraction": myTextExtraction
  });
  $("#results > table").css("visibility", "visible");
  // $("#myTable").tablesorter( {sortList: [[0,0], [1,0]]} );
});

</script>
